<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/app_item_height_grid"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <CheckBox
                style="@style/app_on_top_checkbox_all"
                android:id="@+id/app_on_top"/>
        <ImageView
                android:id="@+id/app_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="@dimen/app_item_margin"/>
    </LinearLayout>
    <TextView
            android:id="@+id/app_item_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/app_item_padding"/>

</LinearLayout>
